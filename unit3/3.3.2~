;; Constants
;; ---------

(define PI 3.14)

;; Function definitions
;; --------------------

;; area-circle: number -> number
;; to compute the area of a circle given its radius
;; example: (area-circle 3) should produce 28.26
(define (area-circle radius)
  (* PI radius radius))
;; test:
(area-circle 3) "should produce" 28.26
