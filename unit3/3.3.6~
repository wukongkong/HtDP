;; Exercise 3.3.6 ;;
;;================;;

;; Fahrenheit->Celsius: number -> number
;; to compute the temperature in Celsius degrees, given it in Fahrenheit degrees
;; example: (Fahrenheit->Celsius 90) should be 32.2
(define (Fahrenheit->Celsius F)
  (* (- F 32) 5/9))

;; Celsius->Fahrenheit: number -> number
;; to compute the temperature in Fahrenheit degrees, given it in Celsius degrees
;; example: (Celsius->Fahrenheit 32.2) should be 90
(define (Celsius->Fahrenheit C)
  (+ (* 9/5 C) 32))

;; Tests:
(Fahrenheit->Celsius 90) "should be" 32.2
(Celsius->Fahrenheit 32.2) "should be" 90

;; I : number -> number
;; to convert a Fahrenheit temperature to Celsius and back
(define (I f)
  (Celsius->Fahrenheit (Fahrenheit->Celsius f)))

(I 32)
