;; in-interval-1: number -> boolean
;; to determine whether x is between -3 and 0 (exclusive)
(define (in-interval-1? x)
  (and (< -3 x) (< x 0)))

;; in-interval-2: number -> boolean
;; to determine whether x is out of the interval 1 and 2 (exclusive)
(define (in-interval-2? x)
  (or (< x 1) (> x 2)))

;; in-interval-3: number -> boolean
;; to determine whether x is out of the interval 1 and 5 (inclusive)
(define (in-interval-3? x)
  (not (and (<= 1 x) (<= x 5))))

;; tests:
(in-interval-1? -2)
(in-interval-2? -2)
(in-interval-3? -2)
