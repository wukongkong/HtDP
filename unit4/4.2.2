;; in-interval1: number -> boolean
;; to determine whether x is between -3 and 0 (exclusive)
(define (in-interval1? x)
  (and (< -3 x) (< x 0)))

;; in-interval2: number -> boolean
;; to determine whether x is out of the interval 1 and 2 (exclusive)
(define (in-interval2? x)
  (or (< x 1) (> x 2)))

;; in-interval3: number -> boolean
;; to determine whether x is out of the interval 1 and 5 (inclusive)
(define (in-interval3? x)
  (not (and (<= 1 x) (<= x 5))))

