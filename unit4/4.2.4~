;;================;;
;; Exercise 2.2.1 ;;
;;================;;

(define (Fahrenheit->Celsius F)
  (* (- F 32) (/ 5 9)))

;;================;;
;; Exercise 2.2.2 ;;
;;================;;
(define (dollar->euro D)
  (* D 0.94))

;;================;;
;; Exercise 2.2.3 ;;
;;================;;

(define (triangle length height)
  (/ (* length height) 2))

;;================;;
;; Exercise 2.2.4 ;;
;;================;;
(define (convert3 x y z)
  (+ x (* 10 y) (* 100 z)))