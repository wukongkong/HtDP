;; distance-to-0 : posn -> number
(define (distance-to-0 a-posn)
  (sqrt (+ (sqr (posn-x a-posn))
           (sqr (posn-y a-posn)))))

;; (1)
(distance-to-0 (make-posn 3 4)) "should be" 5

;; (2)
(distance-to-0 (make-posn (* 2 3) (* 2 4))) "should be" 10

;; (3)
(distance-to-0 (make-posn 12 (- 6 1))) "should be" 13